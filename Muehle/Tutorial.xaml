<Window x:Class="Muehle.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="600" Width="600"
		BorderThickness="0" WindowStyle="None" MouseDown="Window_MouseDown" Background="Gray">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="15"/>
			<ColumnDefinition />
			<ColumnDefinition Width="15"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="15"/>
			<RowDefinition />
			<RowDefinition Height="15"/>
		</Grid.RowDefinitions>

		<Label Name="tutText" FontSize="14" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="1" />
	</Grid>
</Window>
